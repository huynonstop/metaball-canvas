{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "sourceMap": true,
    "incremental": true,
    "declaration": true,
    "removeComments": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "strict": true,
    "lib": [
      "esnext",
      "dom"
    ],
  },
  "exclude": [
    "node_modules",
    "dist",
    "test",
    "seed"
  ],
  "include": [
    "**/*.ts"
  ]
}